/* components/address/addressList/index.wxss */
.view-row {
	flex: 1;
	height: auto;
	padding: 0 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	background-color: #ffffff;
	border-bottom: 20rpx solid #F8F8F8;
}

.view-row-top {
	width: 100%;
	height: auto;
	padding: 24rpx 0;
	display: flex;
	align-items: flex-start;
	justify-content: center;
	flex-direction: column;
	border-bottom: 1rpx solid #eeeeee;
}

.view-row-top-top {
	width: 100%;
	height: auto;
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-direction: row;
}

.view-row-top-top-left {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-direction: row;
}

.view-row-top-top-left text {
	width: auto;
	color: #333333;
	font-size: 30rpx;
}

.view-row-top-top-left text:nth-child(1) {
	font-weight: bold;
	margin-right: 24rpx;
}

.view-row-top-top-right {
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.view-row-top-top-right text {
	width: auto;
	height: 100%;
	text-align: left;
	font-size: 28rpx;
	color: #666666;
	margin-right: 10rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.view-row-top-top-right image {
	width: 45rpx;
	height: 45rpx;
	margin-left: 5rpx;
}

.view-row-top-bottom {
	width: 100%;
	height: auto;
	margin-top: 16rpx;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	font-size: 28rpx;
	color: #333333;
	text-align: left;
}

.view-row-bottom {
	width: 100%;
	height: 92rpx;
	display: flex;
	align-items: center;
	justify-content: flex-end;
}

.view-row-bottom image {
	width: 144rpx;
	height: 64rpx;
}

.view-row-bottom image:nth-child(1) {
	margin-right: 20rpx;
}