/* component/search/index.wxss */
.search-box {
  padding: 0 32rpx;
  display: flex;
}

.search-box .cancel {
  padding: 8px 0 7px 22rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.view-search-row {
  box-sizing: border-box;
  padding: 8px 30rpx 7px 0;
  flex: 1;
  width: 100%;
  height: 35px;
  background: rgba(248, 248, 248, 1);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-search-row-icon {
  width: 44rpx;
  height: 44rpx;
  margin: 7px 16rpx 6px 24rpx;
}

.view-search-row-text {
  flex: 1;
  height: 100%;
  width: 100%;
  overflow: hidden;
  /* display: flex; */
  align-items: center;
  font-size: 28rpx;
  color: #333333;
}