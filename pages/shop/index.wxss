/* pages/cart/cart.wxss */

.topSelect {
  width: 100%;
  height: 30px;
  background-color: rgba(red, green, blue, alpha)
}

.drug-order {
  background-color: #f8f8f8;
  min-height: 100vh;
}

.cart_container {
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  background-color: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.scroll {
  box-sizing: border-box;
  padding: 0 24rpx 20rpx 24rpx;
  margin-bottom: 100rpx;
}

.column {
  flex: 1;
  height: 180rpx;
  margin: 20rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.sku {
  /* position: relative;
  right: -148rpx;
  bottom: 2rpx; */
}

.sku text {
  display: inline-block;
  height: 40rpx;
  line-height: 34rpx;
  width: 40rpx;
  margin-left: 20rpx;
  text-align: center;
}

.sku .sub {
  color: #000;
  border: 1px solid #888;
  border-radius: 50%;
  font-weight: bold;
}

.sku .number {
  font-size: 26rpx;
  font-family: ArialMT;
  color: rgba(3, 3, 3, 1);
}

.sku .add {
  color: rgb(102, 193, 140);
  border: 1px solid rgb(102, 193, 140);
  border-radius: 50%;
  font-weight: bold;
}

.sku-price {
  font-size: 28rpx;
  font-family: ArialMT;
  color: rgba(230, 67, 64, 1);
}

.price {
  color: red;
  position: relative;
}

.title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  /* margin-top: 20rpx; */
  max-height: 123rpx;
  /* line-height: 30rpx; */
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-top: 5rpx;
}

.allChan {
  margin-left: 20rpx;
}

.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 10rpx;
}

.item-select {
  width: 40rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-select-no {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.item-select-yes {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid rgb(102, 193, 140);
  border-radius: 50%;
}

.item-select-yes text {
  position: absolute;
  left: 6rpx;
  top: 6rpx;
  height: 29rpx;
  width: 29rpx;
  border-radius: 50%;
  background-color: rgb(102, 193, 140);
}

.item-allselect-no {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
}

.item-allselect-yes {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  border: 1px solid rgb(102, 193, 140);
  color: #fff;
  border-radius: 50%;
}

.item-allselect-yes text {
  position: absolute;
  left: 6rpx;
  top: 6rpx;
  height: 29rpx;
  width: 29rpx;
  border-radius: 50%;
  background-color: rgb(102, 193, 140);
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: white;
  border-top: 1rpx solid #ccc;
}

.bottom_row {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.total {
  color: #333333;
  font-size: 32rpx;
}

.button-red {
  color: #ffffff;
  font-size: 13;
  background-color: #f44336;
}

.button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
}

.no-list {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-list text {
  width: auto;
  font-size: 40rpx;
  color: #cccccc;
  margin-top: -200rpx;
}