<!--pages/drugOrder/drugOrder.wxml-->
<view class='drug-order'>
  <scroll-view class='scroll' scroll-y="true">
    <view class='cart_container' wx:for="{{carts}}" wx:key="index">
      <view class='item-select'>
        <view class='{{item.isSelect?"item-select-yes":"item-select-no"}}' bindtap="switchSelect" data-index="{{index}}"
          data-id="{{index}}">
          <text></text>
        </view>
      </view>
      <image class='item-image' data-id='{{item.id}}' src='{{item.imgSrc}}' bindtap='selectDelete'></image>
      <view class='column'>
        <view class="top">
          <text class='title'>{{item.title}}</text>
          <text class='desc'>{{item.desc}}</text>
        </view>
        <view class='row'>
          <text class='sku-price'>￥{{item.price}}</text>
          <view class='sku'>
            <text class='sub' bindtap='quantityChange' id='sub' data-index="{{index}}">-</text>
            <text class='number'>{{item.count.quantity}}</text>
            <text class='add' bindtap='quantityChange' id='add' data-index="{{index}}">+</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>

  <view class='bottom_total'>
    <view class='bottom_row'>
      <view bindtap='selectAll' class='{{isAllSelect?"item-allselect-yes":"item-allselect-no"}}'>
        <text></text>
      </view>
      <text class='small_text'>全选</text>
      <text class="total">合计：</text>
      <text class='price'>￥{{totalMoney}}</text>
      <view class='button-red button' bindtap='allDelete'>结算（{{totalIndex}}）</view>
    </view>
  </view>
  <view class='no-list' wx:if="{{listMessage}}">
    <text>暂无数据</text>
  </view>
</view>